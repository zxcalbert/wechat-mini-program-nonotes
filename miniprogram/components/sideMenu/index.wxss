.side-menu-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0);
  z-index: 998;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s ease;
}

.side-menu-overlay.show {
  opacity: 0.5;
  pointer-events: auto;
}

.side-menu {
  position: fixed;
  top: 0;
  left: 0;
  width: 80%;
  max-width: 320px;
  height: 100vh;
  background-color: #ffffff;
  z-index: 999;
  transform: translateX(-100%);
  transition: transform 0.3s ease;
  display: flex;
  flex-direction: column;
  box-shadow: 2px 0 8px rgba(0, 0, 0, 0.1);
  padding-left: env(safe-area-inset-left);
}

.side-menu.show {
  transform: translateX(0);
}

.menu-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px;
  border-bottom: 1px solid #f0f0f0;
  background-color: #fafafa;
}

.menu-title {
  font-size: 18px;
  font-weight: 600;
  color: #000000;
}

.close-btn {
  font-size: 24px;
  color: #666666;
  cursor: pointer;
}

.menu-content {
  flex: 1;
  overflow-y: auto;
  display: flex;
  flex-direction: column;
}

.menu-section {
  padding: 15px 20px;
  border-bottom: 1px solid #f0f0f0;
}

.section-title {
  display: block;
  font-size: 12px;
  color: #999999;
  text-transform: uppercase;
  margin-bottom: 10px;
  font-weight: 600;
}

.heatmap-container {
  width: 100%;
  height: auto;
}

.menu-items {
  padding: 10px 0;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 15px 20px;
  border-bottom: 1px solid #f5f5f5;
  cursor: pointer;
  transition: background-color 0.2s ease;
}

.menu-item:active {
  background-color: #f5f5f5;
}

.menu-icon {
  font-size: 18px;
  margin-right: 15px;
  min-width: 24px;
}

.menu-text {
  font-size: 14px;
  color: #333333;
  flex: 1;
}

.menu-item.logout {
  color: #d84040;
  border-top: 1px solid #f0f0f0;
  margin-top: 10px;
}

.menu-item.logout .menu-text {
  color: #d84040;
  font-weight: 500;
}
