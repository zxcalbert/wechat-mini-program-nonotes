/* pages/write/write.wxss */
page {
  background-color: #ffffff;
}

.container {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  background-color: #ffffff;
  padding-top: env(safe-area-inset-top);
}

.write-header {
  display: flex;
  align-items: center;
  padding: 16px 20px;
  border-bottom: 1px solid #f0f0f0;
  background-color: #ffffff;
  position: sticky;
  top: 0;
  z-index: 10;
  width: 100%;
}

.back-btn {
  font-size: 24px;
  padding: 8px 16px;
  cursor: pointer;
  color: #000000;
  margin-right: 16px;
}

.header-title {
  font-size: 18px;
  font-weight: 600;
  color: #000000;
}

.write-content {
  flex: 1;
  overflow-y: auto;
  padding: 20px;
}

.selector-group {
  margin-bottom: 20px;
}

.picker-item {
  padding: 12px;
  font-size: 14px;
  color: #333333;
  background-color: #f5f5f5;
  border-radius: 8px;
  margin-bottom: 16px;
}

.picker-item .highlight {
  color: #8b4513;
  font-weight: 600;
}

.mood-title {
  font-size: 14px;
  color: #666666;
  font-weight: 600;
  margin-bottom: 8px;
  margin-top: 12px;
}

.mood-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
}

.mood-tag {
  padding: 8px 16px;
  background-color: #f5f5f5;
  border: 1px solid #eeeeee;
  border-radius: 20px;
  color: #666666;
  font-size: 13px;
}

.mood-tag.active {
  background-color: #8b4513;
  color: #ffffff;
  border-color: #8b4513;
  font-weight: 600;
}

.letter-paper {
  background-color: #fdfaf2;
  border: 1px solid #e0d5b1;
  padding: 20px;
  line-height: 1.8;
  min-height: 300px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  border-radius: 8px;
  margin-bottom: 20px;
  flex: 1;
  display: flex;
  flex-direction: column;
}

.letter-paper .header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16px;
  padding-bottom: 12px;
  border-bottom: 1px solid #e0d5b1;
}

.letter-paper .to {
  font-size: 14px;
  color: #8b4513;
  font-weight: 600;
}

.letter-paper .date {
  font-size: 12px;
  color: #999999;
}

.content-area {
  flex: 1;
  font-size: 14px;
  line-height: 1.8;
  color: #333333;
  border: none;
  padding: 0;
  outline: none;
  resize: none;
  font-family: inherit;
}

.letter-paper .footer {
  margin-top: 12px;
  padding-top: 12px;
  border-top: 1px solid #e0d5b1;
  text-align: right;
}

.word-count {
  font-size: 12px;
  color: #999999;
}

/* 邮票选择区域 */
.stamp-section {
  margin-bottom: 20px;
  padding: 16px;
  background-color: #fafafa;
  border-radius: 8px;
}

.stamp-title {
  font-size: 14px;
  font-weight: 600;
  color: #333333;
  margin-bottom: 12px;
}

.stamp-options {
  display: flex;
  gap: 12px;
  margin-bottom: 16px;
}

.stamp-option {
  flex: 1;
  padding: 12px;
  background-color: #ffffff;
  border: 2px solid #e0d5b1;
  border-radius: 8px;
  text-align: center;
  cursor: pointer;
  transition: all 0.2s ease;
}

.stamp-option:active {
  opacity: 0.8;
}

.stamp-option.selected {
  border-color: #8b4513;
  background-color: rgba(139, 69, 19, 0.05);
}

.stamp-option .option-text {
  display: block;
  font-size: 14px;
  font-weight: 600;
  color: #333333;
  margin-bottom: 4px;
}

.stamp-option .option-desc {
  display: block;
  font-size: 12px;
  color: #999999;
}

.stamp-option.selected .option-desc {
  color: #8b4513;
}

.warn-section {
  background-color: #fff3cd;
  padding: 12px;
  border-radius: 6px;
  margin-bottom: 12px;
  border-left: 4px solid #ffc107;
}

.warn-text {
  display: block;
  font-size: 12px;
  color: #856404;
  margin-bottom: 8px;
}

.buy-stamps-btn {
  width: 100%;
  padding: 8px;
  background-color: #ffc107;
  color: #333333;
  border: none;
  border-radius: 6px;
  font-size: 13px;
  font-weight: 600;
}

.reply-info {
  padding: 12px;
  background-color: #e7f3ff;
  border-left: 4px solid #2196f3;
  border-radius: 4px;
  font-size: 12px;
  color: #1976d2;
  line-height: 1.6;
}

.reply-info .info-title {
  display: block;
  font-weight: 600;
  margin-bottom: 8px;
}

.reply-info .info-text {
  display: block;
  margin-bottom: 4px;
}

.send-buttons {
  padding: 12px 20px 20px 20px;
}

.send-btn {
  width: 100%;
  padding: 16px;
  background-color: #2ecc71;
  color: #ffffff;
  border: none;
  border-radius: 8px;
  font-size: 14px;
  font-weight: 600;
  transition: background-color 0.2s ease;
}

.send-btn:active {
  background-color: #27ae60;
}

.send-btn.disabled {
  background-color: #cccccc;
  cursor: not-allowed;
}
