/* pages/login/login.wxss */
page {
  background-color: #f7f7f7;
}

.login-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: linear-gradient(180deg, #f7f7f7 0%, #ffffff 100%);
}

/* 已登录状态 */
.user-info-section {
  display: flex;
  align-items: center;
  padding: 60rpx 30rpx 40rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #f0f0f0;
}

.avatar-wrapper {
  margin-right: 30rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 3rpx solid #8b4513;
}

.user-details {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.nickname {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
}

.location {
  font-size: 24rpx;
  color: #999;
}

/* 信息卡片 */
.info-card {
  margin: 40rpx 30rpx;
  padding: 30rpx;
  background-color: #fdfaf2;
  border-radius: 12rpx;
  border-left: 4rpx solid #8b4513;
}

.info-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #8b4513;
  margin-bottom: 15rpx;
}

.info-text {
  display: block;
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
}

/* Logo 部分 */
.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 30rpx 40rpx;
}

.logo {
  font-size: 120rpx;
  margin-bottom: 20rpx;
}

.app-name {
  font-size: 48rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 10rpx;
}

.slogan {
  font-size: 28rpx;
  color: #8b4513;
  font-weight: 500;
}

/* 介绍部分 */
.intro-section {
  margin: 50rpx 30rpx;
  padding: 30rpx;
  background-color: #ffffff;
  border-radius: 12rpx;
}

.intro-item {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.intro-item:last-child {
  margin-bottom: 0;
  padding-bottom: 0;
  border-bottom: none;
}

.intro-icon {
  display: block;
  font-size: 44rpx;
  margin-right: 20rpx;
  min-width: 50rpx;
}

.intro-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

/* 隐私说明 */
.privacy-notice {
  margin: 0 30rpx;
  padding: 25rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  border-left: 3rpx solid #ccc;
}

.notice-title {
  display: block;
  font-size: 24rpx;
  font-weight: 600;
  color: #666;
  margin-bottom: 10rpx;
}

.notice-text {
  display: block;
  font-size: 22rpx;
  color: #999;
  line-height: 1.6;
}

/* 按钮 */
.btn {
  margin: 20rpx 30rpx;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  background-color: #f0f0f0;
  color: #999;
}

.btn-login {
  margin-top: auto;
  margin-bottom: 40rpx;
  background-color: #8b4513;
  color: #ffffff;
  padding: 24rpx;
  font-size: 30rpx;
  font-weight: 600;
}

.btn-login:active {
  background-color: #6b3410;
}

.btn-primary {
  background-color: #8b4513;
  color: #ffffff;
  margin-top: 30rpx;
}

.btn-primary:active {
  background-color: #6b3410;
}

.btn-logout {
  background-color: #f0f0f0;
  color: #999;
}

.btn-logout:active {
  background-color: #e0e0e0;
}
